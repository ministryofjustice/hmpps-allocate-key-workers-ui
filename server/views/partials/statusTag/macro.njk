{% macro statusTag(params) %}
    {% if params.text == 'Active' %}
        <strong class="govuk-tag status-tag govuk-tag--green">Active</strong>
    {% elif params.text == 'Inactive' %}
        <strong class="govuk-tag status-tag govuk-tag--red">Inactive</strong>
    {% else %}
        <strong class="govuk-tag status-tag govuk-tag--red">{{'Unavailable' if params.short else params.text }}</strong>
    {% endif %}
{% endmacro %}