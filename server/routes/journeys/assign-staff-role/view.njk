{% extends "partials/layout.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "partials/submitButton/macro.njk" import submitButton %}
{% from "partials/simplePagination/macro.njk" import simplePagination %}
{% from "govuk/components/table/macro.njk" import govukTable %}

{% set pageTitle = "Make someone a " + policyName + " - " + policyName | sentenceCase %}

{% block innerContent %}
  <h1 class="govuk-heading-l govuk-!-margin-bottom-6">Make someone a {{ policyName }}</h1>

  <div class="govuk-width-container">
    <form class="govuk-!-margin-bottom-6" method="post">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
      <div class="horizontal-form">
        {{ govukInput({
          formGroup: {
            classes: "govuk-!-width-three-quarters"
          },
          classes: "govuk-!-width-full",
          label: {
            text: "Find a staff member",
            classes: "govuk-fieldset__legend--s",
            isPageHeading: false
          },
          hint: {
            text: "Search by name, work email address or username."
          },
          id: "query",
          name: "query",
          value: query,
          errorMessage: validationErrors | findError('query')
        }) }}
        {{ submitButton({
          text: "Search"
        }) }}
      </div>
    </form>

    {% if searchResults %}
      {% if searchResults.length %}

        {% set rows = [] %}
        {% for item in searchResults %}
          {% set rows = (rows.push([
            {
              html: '<a class="govuk-link govuk-link--no-visited-state" href="assign-staff-role/select?staffId=' + item.staffId + '">' + (item | firstNameSpaceLastName) + '</a>'
            },
            {
              text: item.email
            },
            {
              text: item.username
            }
          ]), rows) %}
        {% endfor %}


        {{ simplePagination(paginationParams)  }}
        {{ govukTable({
          head: [
            {
              text: "Name"
            },
            {
              text: "Email addres"
            },
            {
              text: "Username"
            }
          ],
          rows: rows
        }) }}
        {{ simplePagination(paginationParams)  }}
      {% else %}
        <p>
          There are no results for this name or email address at {{ user.activeCaseLoad.description }}
        </p>
      {% endif %}
    {% endif %}

  </div>

{% endblock %}
