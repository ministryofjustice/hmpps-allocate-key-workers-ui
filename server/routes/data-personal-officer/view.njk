{% extends "partials/layout.njk" %}
{% from "moj/components/date-picker/macro.njk" import mojDatePicker %}
{% from "partials/submitButton/macro.njk" import submitButton %}
{% from "data/components/statCard.njk" import statCard %}

{% set fullWidth = true %}
{% set pageTitle -%}
  View {{ policyStaff }} data
{%- endset %}

{% block innerContent %}

  <h1 class="govuk-heading-l">{{policyStaff | sentenceCase}} data for {{ user.activeCaseLoad.description }}</h1>

  <hr class="govuk-footer__section-break" />

  <div class="govuk-!-margin-bottom-4">

    <form method="post" >
      <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

      <h2 class="govuk-heading-m">Select a date range to view</h2>
      <div class="date-search-form">
        {{ mojDatePicker({
          id: "dateFrom",
          name: "dateFrom",
          label: {
            text: "From"
          },
          errorMessage: validationErrors | findError('dateFrom'),
          value: dateFrom,
          maxDate: yesterdayStringGBFormat()
        }) }}

        {{ mojDatePicker({
          id: "dateTo",
          name: "dateTo",
          label: {
            text: "To"
          },
          errorMessage: validationErrors | findError('dateTo'),
          value: dateTo,
          maxDate: yesterdayStringGBFormat()
        }) }}

        {{ submitButton({
          text: "View"
        }) }}
      </div>

      <h2 class="govuk-heading-m">Select a custom date range to compare against (optional)</h2>
      <div class="date-search-form">
        {{ mojDatePicker({
          id: "compareDateFrom",
          name: "compareDateFrom",
          label: {
            text: "From"
          },
          value: compareDateFrom,
          maxDate: yesterdayStringGBFormat()
        }) }}

        {{ mojDatePicker({
          id: "compareDateTo",
          name: "compareDateTo",
          label: {
            text: "To"
          },
          value: compareDateTo,
          maxDate: yesterdayStringGBFormat()
        }) }}
      </div>

    </form>
  </div>

  <hr class="govuk-footer__section-break" />

  {% if data.length %}

    <p>Displaying statistics from {{ dateRange.dateFrom | dateString }} to {{ dateRange.dateTo | dateString }}. Comparing against statistics from {{ dateRange.compareDateFrom | dateString }} to {{ dateRange.compareDateTo | dateString }}.</p>
    <p class="govuk-!-margin-top-6">Date updated: {{ dateUpdated | dateString }}</p>

    <div class="govuk-grid-row stat-card-grid">
      {% for statistic in data %}
        <div class="govuk-grid-column-one-half">
          {{ statCard(statistic, policyStaff) }}
        </div>
      {% endfor %}
    </div>
  {% else %}
    <h2 class="govuk-heading-s">There is no data for this period.</h2>
  {% endif %}

{% endblock %}
