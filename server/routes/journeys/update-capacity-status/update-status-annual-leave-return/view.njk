{% extends "partials/layout.njk" %}
{% from "partials/statusTag/macro.njk" import statusTag %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/validatedDateInput/macro.njk" import validatedDateInput %}

{% set fullWidth = true %}
{% set pageTitle = "When will the key worker return from annual leave? - Key worker profile - DPS" %}

{% block innerContent %}
  <div class="govuk-width-container govuk-body">
    <div class="govuk-grid-row govuk-!-margin-0">
      <h1 class="govuk-heading-l govuk-!-display-inline-block govuk-!-margin-0">{{ keyworker | firstNameSpaceLastName }}</h1>
      <p class="govuk-!-margin-left-2 govuk-!-display-inline-block govuk-!-margin-0 "> {{ statusTag({ text: status.description }) }}</p>
    </div>
    <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible" />

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <form method="post">
          <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
          {{ validatedDateInput({
            id: "reactivateOn",
            title: {
              text: "When will the key worker return from annual leave?",
              isPageHeading: true,
              classes: "govuk-fieldset__legend--l govuk-!-margin-bottom-6 main-heading"
            },
            hintText: "For example, 27 3 2025. The key worker will automatically be set to Active from this date.",
            validationErrors: validationErrors,
            day: day,
            month: month,
            year: year
          }) }}

          <div class="govuk-button-group">
            {{ govukButton({
              text: "Continue",
              preventDoubleClick: true
            }) }}

            {{ govukButton({
              text: "Cancel",
              classes: "govuk-button--secondary",
              href: "cancel",
              preventDoubleClick: true
            }) }}
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
